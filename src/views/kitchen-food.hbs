<!DOCTYPE html>
<html lang="en">

<head>
    <title>Kiểm soát thực đơn</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.min.js"
        integrity="sha384-heAjqF+bCxXpCWLa6Zhcp4fu20XoNIA98ecBC1YkdXhszjoejr5y9Q77hIrv8R9i"
        crossorigin="anonymous"></script>

</head>

<style>
    .form-check {
        float: right;
        margin-right: 24%;
    }
    .login {
        display: none;
    }

    #back{
        text-decoration: none;
        margin-bottom: 4px;
    }

    .footer{
        display: none;
    }
</style>

<body>

    <div class="table__handleFood">
        <a href="/kitchen" id="back">Trở về</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="w-25">Mã món</th>
                    <th scope="col" class="w-25">Tên món</th>
                    <th scope="col" class="w-25">Trạng thái</th>
                    <th scope="col" class="w-25 text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="w-25">B01</td>
                    <td class="w-25">Bò Mỹ Sốt Tiêu Đen</td>
                    <td class="w-25">Sẵn có</td>
                    <td class="w-25 ">
                        <div class="form-check form-switch">
                            <label class="form-check-label" for="flexSwitchCheckChecked">Bật/Tắt món ăn</label>
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked"
                                checked>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td class="w-25">B01</td>
                    <td class="w-25">Bò Mỹ Sốt Tiêu Đen</td>
                    <td class="w-25">Sẵn có</td>
                    <td class="w-25 ">
                        <div class="form-check form-switch">
                            <label class="form-check-label" for="flexSwitchCheckChecked1">Bật/Tắt món ăn</label>
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked1"
                                checked>
                        </div>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>

</body>

<script>
    const switchInput = document.getElementById("flexSwitchCheckChecked");
    const statusCell = document.querySelector("td:nth-child(3)");
    const nameCell = document.querySelector("td:nth-child(2)");
    const codeCell = document.querySelector("td:nth-child(1)");

    switchInput.addEventListener("change", function () {
        if (this.checked) {
            statusCell.innerHTML = "Sẵn có";
            statusCell.style.backgroundColor = "";
            nameCell.style.backgroundColor = "";
            codeCell.style.backgroundColor = "";
        } else {
            statusCell.innerHTML = "Đã bán hết";
            statusCell.style.backgroundColor = "gray";
            nameCell.style.backgroundColor = "gray";
            codeCell.style.backgroundColor = "gray";
        }
    });
</script>

</html>