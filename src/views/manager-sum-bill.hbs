<body onload="displayDate()">
    <div class="container">
        <h2 id="current-date" class="text-center">Tổng hợp phiếu tính tiền </h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Mã phiếu</th>
                    <th scope="col">Mã đơn hàng</th>
                    <th scope="col">Nhân viên tạo</th>
                    <th scope="col">ngày tạo</th>
                    <th scope="col">Tổng tiền</th>
                </tr>
            </thead>
            <tbody>
                {{#each bills}}
                <tr>
                    <th scope="row">{{this.maphieu}}</th>
                    <td><a href="/manager/detail-order/{{this.madonhang}}">{{this.madonhang}}</a></td>
                    <td>{{this.manhanvien}}</td>
                    <td>{{this.ngaytao}}</td>
                    <td>{{this.tongtien}}</td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>
        {{!-- <button onclick="history.back()" style="float: left;" type="button" class="btn btn-primary">Trở
            về</button> --}}
    </div>
</body>
